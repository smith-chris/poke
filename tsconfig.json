{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "jsx": "react",
    "strictNullChecks": true
  },
  "include": ["./src/**/*"]
}
